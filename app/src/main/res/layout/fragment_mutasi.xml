<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MutasiFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_v3_white_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_v3_red_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="16dp"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_search">

                        <TextView
                            android:id="@+id/tv_search_mutation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:hint="Cari aset"
                            android:paddingLeft="16dp"
                            android:paddingRight="48dp"
                            android:maxLength="40"
                            android:textSize="12sp"
                            android:textColorHint="@color/color_v3_gray_1"
                            android:textColor="@color/color_v3_black_1"
                            android:inputType="text" />

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_search_submit_mutation"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="8dp"
                            android:layout_margin="8dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            app:cardElevation="0dp"
                            android:foreground="?android:attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_search_black"/>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_scan_qr_mutation"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/color_v3_red_3"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iv_scan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="12dp"
                            android:src="@drawable/ic_qr_scan"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_empty_mutation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:src="@drawable/undraw_file_searching_duff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/color_v3_gray_1"
                        android:text="Cari atau scan aset"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_mutation"
                    android:paddingTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </LinearLayout>

        <com.rey.material.widget.ProgressView
            android:id="@+id/pv_mutation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
            app:pv_progressMode="indeterminate"
            android:layout_centerInParent="true"
            android:theme="@style/progressViewColor"
            android:indeterminate="false" />

    </RelativeLayout>

</FrameLayout>