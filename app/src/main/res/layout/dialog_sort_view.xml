<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_dark">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="URUTKAN"
        android:background="@color/color_gray_595D64_100"
        android:textColor="@color/color_white_FFFFFF_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_terbaru"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/transparent"
            android:clickable="true"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terbaru"
                android:textSize="12sp"
                android:layout_margin="4dp"
                android:textColor="@color/color_v3_white_1"
                />
        </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/iv_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_terlama"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/transparent"
            android:clickable="true"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terlama"
                android:textSize="12sp"
                android:layout_margin="4dp"
                android:textColor="@color/color_v3_white_1"
                />
        </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/iv_terlama"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_az"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/transparent"
            android:clickable="true"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A - Z"
                android:textSize="12sp"
                android:layout_margin="4dp"
                android:textColor="@color/color_v3_white_1"
                />
        </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/iv_az"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_za"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/transparent"
            android:clickable="true"
            app:cardElevation="0dp"
            android:foreground="?android:attr/selectableItemBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Z - A"
                android:textSize="12sp"
                android:layout_margin="4dp"
                android:textColor="@color/color_v3_white_1"
                />
        </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/iv_za"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>


</LinearLayout>