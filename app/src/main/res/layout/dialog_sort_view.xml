<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_dark"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="URUTKAN"
        android:background="@color/color_v3_gray_3"
        android:textColor="@color/color_v3_white_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_terbaru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terbaru"
            android:textSize="12sp"
            android:textColor="@color/color_v3_white_1"
            />
        <ImageView
            android:id="@+id/iv_terbaru"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_terlama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terlama"
            android:textSize="12sp"
            android:textColor="@color/color_v3_white_1"
            />
        <ImageView
            android:id="@+id/iv_terlama"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_az"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A - Z"
            android:textSize="12sp"
            android:textColor="@color/color_v3_white_1"
            />
        <ImageView
            android:id="@+id/iv_az"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_za"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Z - A"
            android:textSize="12sp"
            android:textColor="@color/color_v3_white_1"
            />
        <ImageView
            android:id="@+id/iv_za"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checklist"/>
    </LinearLayout>


</LinearLayout>