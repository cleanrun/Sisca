<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mutation.MutationDetailActivity">

    <com.rey.material.widget.ProgressView
        android:id="@+id/pv_mutation_detail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
        app:pv_progressMode="indeterminate"
        android:layout_centerInParent="true"
        android:theme="@style/progressViewColor"
        android:indeterminate="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/color_v3_red_2"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_back_mutation_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/color_v3_red_2"
                    android:foreground="?android:attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/ic_arrow_back_white_24dp"
                        android:layout_gravity="left"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        />
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mutasi"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_v3_white_1"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_photo_mutation_detail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_name_mutation_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama aset"
                            android:textColor="@color/color_v3_black_1"
                            android:textSize="28sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_id_mutation_detail"
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ID aset"
                            android:textColor="@color/color_v3_gray_1"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi / Spesifikasi"
                            android:textColor="@color/color_v3_black_1"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_desc_mutation_detail"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/color_v3_gray_1"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_marginTop="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lokasi"
                            android:textColor="@color/color_v3_gray_1"
                            android:textSize="16sp"/>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:descendantFocusability="beforeDescendants"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/et_location_before_mutation_detail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="XXX"
                                android:editable="false"
                                android:layout_weight="1"/>
                            <android.support.v7.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="24dp"
                                android:clickable="true"
                                app:cardElevation="0dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardBackgroundColor="@color/color_v3_red_3"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:src="@drawable/ic_arrow_forward_white_24dp"/>
                            </android.support.v7.widget.CardView>
                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PIC"
                            android:textColor="@color/color_v3_gray_1"
                            android:textSize="16sp"/>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:descendantFocusability="beforeDescendants"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/et_pic_before_mutation_detail"
                                android:editable="false"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="XXX"
                                android:layout_weight="1"/>
                            <android.support.v7.widget.CardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="24dp"
                                android:clickable="true"
                                app:cardElevation="0dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardBackgroundColor="@color/color_v3_red_3"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:src="@drawable/ic_arrow_forward_white_24dp"/>
                            </android.support.v7.widget.CardView>
                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alasan mutasi"
                            android:textColor="@color/color_v3_gray_1"
                            android:textSize="16sp"/>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:descendantFocusability="beforeDescendants"
                            android:focusableInTouchMode="true"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/et_notes_mutation_detail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Tuliskan alasan pindah aset disini"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/btn_submit_mutation_detail"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button_red"
                android:text="Pindah"
                android:textColor="@color/color_v3_white_1"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>