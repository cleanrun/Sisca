<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:scrollbars="none"
    android:scrollingCache="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_v3_white_2">

        <com.rey.material.widget.ProgressView
            android:id="@+id/pv_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
            app:pv_progressMode="indeterminate"
            android:layout_centerInParent="true"
            android:theme="@style/progressViewColor"
            android:indeterminate="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_v3_red_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_number_users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_account_border"
                            android:drawablePadding="8dp"
                            android:textSize="14sp"
                            android:drawableTint="@color/color_v3_white_1"
                            android:text="Pengguna : "
                            android:textColor="@color/color_v3_white_1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_v3_white_1"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_number_assets_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aset : "
                            android:textSize="14sp"
                            android:drawableLeft="@drawable/ic_mutasi_border"
                            android:drawableTint="@color/color_v3_white_1"
                            android:drawablePadding="8dp"
                            android:textColor="@color/color_v3_white_1"/>

                    </RelativeLayout>

                </LinearLayout>

            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:id="@+id/ll_main_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>