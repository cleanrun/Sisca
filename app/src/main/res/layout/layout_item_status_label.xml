<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- Status Label Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="10"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:tint="@color/grey_60"
                app:srcCompat="@drawable/ic_local_offer"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:text="@string/status_label"
                android:textColor="@color/grey_60"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center_horizontal"
                android:text=":"
                android:textColor="@color/grey_60"/>

            <TextView
                android:id="@+id/tv_status_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.3"
                android:hint="Laurie Christ"/>

        </LinearLayout>

        <!-- Status Type Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="10"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:tint="@color/grey_60"
                app:srcCompat="@drawable/ic_verified_user"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:text="@string/status_type"
                android:textColor="@color/grey_60"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center_horizontal"
                android:text=":"
                android:textColor="@color/grey_60"/>

            <TextView
                android:id="@+id/tv_status_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.3"
                android:hint="Deployed"/>

        </LinearLayout>

        <!-- Notes Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="10"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:tint="@color/grey_60"
                app:srcCompat="@drawable/ic_create"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:text="@string/notes"
                android:textColor="@color/grey_60"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center_horizontal"
                android:text=":"
                android:textColor="@color/grey_60"/>

            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.3"
                android:maxLines="1"
                android:hint="Lorem ipsum dolor sit amet"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_40"/>

</LinearLayout>